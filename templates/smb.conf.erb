# ====================
# This file is managed by Puppet. Local changes will be reverted automatically
# This is the main Samba configuration file for the Samba suite for Debian GNU/Linux.
#
# All configuration setting not set explicitly are defaults.
# See http://www.samba.org/samba/docs/man/manpages-3/smb.conf.5.html

#======================= Global Settings =======================

[global]

workgroup = <%= @workgroup %>
server string = <%= @server_string %>
netbios aliases = <%= @server_alias %>
log file = <%= @log_file %>

<% @config_options.sort.each do |option,value| %><%= option %> = <%= value %>
<% end %>

#======================= Extra Settings =======================

<% @include_files.sort.each do |include| %>
include = <%= @config_directory %>/<%= include %><% end %>

